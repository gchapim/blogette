<div class="container">
  <div class="head">
    <h1>Edit <%= @author.name %></h1>
  </div>

  <%= form_for @author, url: admin_author_path(@author) do |f| %>
    <div class="form-group">
      <label for="author-firstname">First name</label>
      <%= f.text_field(:firstname, class: 'form-control', id: 'author-firstname', placeholder: 'Jon') %>
      <label for="author-lastname">Last name</label>
      <%= f.text_field(:lastname, class: 'form-control', id: 'author-lastname', placeholder: 'Snow') %>
    </div>

    <div class="form-group">
      <%= f.submit 'Reset', type: :reset, class: 'btn btn-secondary btn-lg' %>
      <%= f.submit 'Update author', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>

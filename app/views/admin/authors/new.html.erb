<div class="container">
  <div class="head">
    <h1>Create Author</h1>
  </div>

  <%= form_with model: @author, url: admin_authors_path do |f| %>
    <div class="form-group">
      <label for="author-firstname">First name</label>
      <%= f.text_field(:firstname, class: 'form-control', id: 'author-firstname', placeholder: 'Jon') %>
      <label for="author-lastname">Last name</label>
      <%= f.text_field(:lastname, class: 'form-control', id: 'author-lastname', placeholder: 'Snow') %>
    </div>

    <div class="form-group">
      <label for="author_user_id">Create for</label>
      <%= f.select :user_id, User.where(author: nil).collect { |a| [a.email, a.id] }, {}, class: 'custom-select' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Create Author', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>

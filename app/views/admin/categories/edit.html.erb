<div class="container">
  <div class="head">
    <h1>Edit <%= @category.name %></h1>
  </div>

  <%= form_for @category, url: admin_category_path(@category) do |f| %>
    <div class="form-group">
      <label for="category-name">Name</label>
      <%= f.text_field(:name, class: 'form-control', id: 'category-name', placeholder: 'Ruby on Rails') %>
      <label for="category-description">Description</label>
      <%= f.text_area(:description, class: 'form-control', id: 'category-description', placeholder: '(optional)') %>
    </div>

    <div class="form-group">
      <%= f.check_box :active %>
      <label for="category_active">Active</label>
    </div>

    <div class="form-group">
      <%= f.submit 'Reset', type: :reset, class: 'btn btn-secondary btn-lg' %>
      <%= f.submit 'Update category', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>

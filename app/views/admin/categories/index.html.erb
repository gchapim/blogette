<div class="container">
  <div class="head">
    <h1>Categories</h1>
    <%= link_to 'Create a category', new_admin_category_path, class: 'btn btn-primary' %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Active</th>
        <th>Posts</th>
        <th>Created</th>
        <th>Last Updated</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.active? ? 'Yes' : 'No' %></td>
          <td><%= category.posts.size %></td>
          <td><%= category.created_at.to_s :long %></td>
          <td><%= category.updated_at.to_s :long %></td>
          <td><%= link_to 'Show', admin_category_path(category) %> | <%= link_to 'Edit', edit_admin_category_path(category) %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

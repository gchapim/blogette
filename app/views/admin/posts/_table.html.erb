<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Created</th>
      <th>Last Updated</th>
      <th>Published at</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to post.author.name, admin_author_path(post.author) %></td>
        <td><%= post.created_at.to_s :long %></td>
        <td><%= post.updated_at.to_s :long %></td>
        <td><%= post.published_at.try(:to_s,:long) %></td>
        <td><%= link_to 'Show', admin_post_path(post) %> | <%= link_to 'Edit', edit_admin_post_path(post) %>
      </tr>
    <% end %>
  </tbody>
</table>


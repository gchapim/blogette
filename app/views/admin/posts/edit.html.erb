<div class="container">
  <div class="head">
    <h1>Edit <%= @post.title %></h1>
    <p>
      <i><%= @post.active? ? "Published at: #{@post.published_at.to_s :long}" : "Not published yet" %></i>
    </p>
  </div>

  <%= form_for @post, url: admin_post_path(@post) do |f| %>
    <div class="form-group">
      <label for="post_title">Title</label>
      <%= f.text_field(:title, class: 'form-control', id: 'post-title', placeholder: 'Enter a Title') %>
    </div>

    <div class="form-group">
      <label for="post-content">Subtitle</label>
      <%= f.text_area(:subtitle, class: 'form-control', id: 'post-content', placeholder: '(optional)') %>
    </div>

    <div class="form-group">
      <label for="post-content">Text</label>
      <%= f.rich_text_area(:content, class: 'form-control', id: 'post-content', placeholder: 'Start writing!') %>
    </div>

    <div class="form-group">
      <%= f.check_box :active %>
      <label for="post_active">Publish (mark as active)</label>
    </div>

    <div class="form-group">
      <%= f.submit 'Reset', type: :reset, class: 'btn btn-secondary btn-lg' %>
      <%= f.submit 'Update Post', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>

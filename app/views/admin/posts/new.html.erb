<div class="container">
  <div class="head">
    <h1>Create Post</h1>
  </div>

  <%= form_with model: @post, url: admin_posts_path do |f| %>
    <div class="form-group">
      <label for="post_title">Title</label>
      <%= f.text_field(:title, class: 'form-control', id: 'post-title', placeholder: 'Enter a Title') %>
    </div>

    <div class="form-group">
      <label for="post-content">Subtitle</label>
      <%= f.text_area(:subtitle, class: 'form-control', id: 'post-content', placeholder: '(optional)') %>
    </div>

    <div class="form-group">
      <label for="post-content">Text</label>
      <%= f.rich_text_area(:content, class: 'form-control', id: 'post-content', placeholder: 'Start writing!') %>
    </div>

    <div class="form-group">
      <%= f.check_box :active %>
      <label for="post_active">Publish (mark as active)</label>
    </div>

    <div class="form-group">
      <label for="Â´post_category_ids">Tags</label>
      <%= f.select :category_ids, Category.active.order(:name).collect { |a| [a.name, a.id] }, {}, multiple: true %>
    </div>

    <div class="form-group">
      <label for="post_author_id">Create as</label>
      <%= f.select :author_id, Author.all.collect { |a| [a.name, a.id] }, {}, class: 'custom-select' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Create Post', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>

  <script>
    $('#post_category_ids').chosen({
      allow_single_deselect: true,
      width: '100%'
    })
  </script>
</div>

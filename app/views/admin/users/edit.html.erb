<div class="container">
  <div class="head">
    <h1>Edit <%= @user.email %></h1>
  </div>

  <%= form_for @user, url: admin_user_path(@user) do |f| %>
    <div class="form-group">
      <label for="user-email">Email</label>
      <%= f.email_field(:email, class: 'form-control', id: 'user-email', placeholder: 'thanos@blogette.com') %>
      <label for="user-password">Password</label>
      <%= f.password_field(:password, class: 'form-control', id: 'user-password') %>
    </div>

    <div class="form-group">
      <%= f.submit 'Reset', type: :reset, class: 'btn btn-secondary btn-lg' %>
      <%= f.submit 'Update user', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>

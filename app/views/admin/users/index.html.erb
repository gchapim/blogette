<div class="container">
  <div class="head">
    <h1>Users</h1>
    <%= link_to 'Create a User', new_admin_user_path, class: 'btn btn-primary' %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Author</th>
        <th>Created</th>
        <th>Last Updated</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= link_to user.author.name, admin_author_path(user.author) if user.author %></td>
          <td><%= user.created_at.to_s :long %></td>
          <td><%= user.updated_at.to_s :long %></td>
          <td><%= link_to 'Show', admin_user_path(user) %> | <%= link_to 'Edit', edit_admin_user_path(user) %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
